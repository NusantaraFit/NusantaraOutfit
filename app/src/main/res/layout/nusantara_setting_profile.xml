<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgorund2"
    tools:context=".MainActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
<LinearLayout
    android:layout_marginBottom="24dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_gravity="center_horizontal"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/logo"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="130dp"
        tools:layout_editor_absoluteY="72dp" />

    <Button
        android:id="@+id/button_edit_profile"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:alpha="0.5"
        android:text="p r e s s  t o  e d i t"
        android:textAllCaps="false"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="215dp" />

    <ImageButton
        android:id="@+id/btnChecklist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:src="@drawable/checklistt"
        android:layout_gravity="end"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="352dp"
        tools:layout_editor_absoluteY="16dp" />
</LinearLayout>

    <LinearLayout

        android:id="@+id/group1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="8dp"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="254dp">

        <TextView
            android:textSize="14dp"
            android:textColor="@color/black"
        android:id="@+id/txtNamaPelanggan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"/>

        <TextView
            android:id="@+id/txtNamaPelanggan2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nusantarafit"
            android:layout_marginLeft="260dp"
            android:textColor="@color/colorBlack"/>

        <ImageButton
            android:id="@+id/imgBtnNama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded"
            android:layout_gravity="end"
            android:src="@drawable/grroup26" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/group2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="294dp">

        <TextView
            android:textSize="14dp"
            android:textColor="@color/black"
            android:id="@+id/txtUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username" />

        <TextView
            android:id="@+id/txtUsername2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="205dp"
            android:text="nusantaraoutfit"
            android:textColor="@color/colorBlack"/>

        <ImageButton
            android:id="@+id/imgBtnUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/rounded"
            android:gravity="right"
            android:layout_gravity="end"
            android:src="@drawable/grroup26" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/shadow"
        android:elevation="0px"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="335dp" />

    <LinearLayout
        android:id="@+id/group3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="360dp">

        <TextView
            android:id="@+id/txtGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:textSize="14dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/txtGender2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="293dp"
            android:text="Pria"
            android:textColor="@color/colorBlack"/>

        <ImageButton
            android:id="@+id/imgBtnGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/rounded"
            android:gravity="right"
            android:paddingLeft="5dp"
            android:src="@drawable/grroup26" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/group4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="400dp">

        <TextView
            android:id="@+id/txtDoB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date of Birth"
            android:textSize="14dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/txtDoB2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="213dp"
            android:text="31-05-2020"
            android:textColor="@color/colorBlack"/>

        <ImageButton
            android:id="@+id/imgBtnBoD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/rounded"
            android:gravity="right"
            android:paddingLeft="5dp"
            android:src="@drawable/grroup26" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/group5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="440dp">

        <TextView
            android:id="@+id/txtHP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:textSize="14dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/txtHP2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="180dp"
            android:text="08999498613"
            android:textColor="@color/colorBlack"/>

        <ImageButton
            android:id="@+id/imgBtnHP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/rounded"
            android:gravity="right"
            android:paddingLeft="5dp"
            android:src="@drawable/grroup26" />

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/group6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="500dp">

        <TextView
            android:id="@+id/txtEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="14dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/txtEmail2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:text="nusantaraoutfit@gmail.com"
            android:textColor="@color/colorBlack"/>

        <ImageButton
            android:id="@+id/imgBtnEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded"
            android:paddingLeft="5dp"
            android:src="@drawable/grroup26" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/group7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="540dp">

        <TextView
            android:id="@+id/txtPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:textSize="14dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/txtPass2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:text=""
            android:textColor="@color/colorBlack"/>

        <ImageButton
            android:id="@+id/imgBtnPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="155dp"
            android:background="@drawable/rounded"
            android:gravity="right"
            android:paddingLeft="5dp"
            android:src="@drawable/grroup26" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/shadow"
        android:elevation="0px"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="580dp" />
    </LinearLayout>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>