<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/bg5"
    android:orientation="vertical"
    android:layout_weight="2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/back_fromcart"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:shadowColor="@color/black"
                android:src="@drawable/previous"
                android:text="Previous"
                android:textColor="#000"
                android:textSize="10dp"
                app:backgroundTint="#fff" />

            <ImageButton
                android:layout_width="43dp"
                android:layout_height="29dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_marginLeft="29dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="9dp"
                android:layout_marginRight="10dp"
                android:backgroundTint="#fff"
                android:src="@drawable/grroup23" />

            <TextView
                android:gravity="center"
                android:layout_width="402dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="center|top"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="62dp"
                android:layout_marginEnd="9dp"
                android:layout_marginRight="9dp"
                android:text="Shopping Cart"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold" />

        </RelativeLayout>



    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:layout_gravity="bottom"
        app:cardCornerRadius="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg5">

            <TextView
                android:id="@+id/subtot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sub Total"
                android:textColor="#656565"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="30sp"
                android:layout_marginLeft="50dp"
                android:textSize="16dp"
                android:layout_alignParentLeft="true" />

            <TextView
                android:id="@+id/zip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ZIP Code"
                android:textColor="#656565"
                android:textSize="16dp"
                android:layout_below="@id/subtot"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="20sp"
                android:layout_marginLeft="50dp"/>

            <TextView
                android:id="@+id/total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total"
                android:layout_below="@id/zip"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="20sp"
                android:layout_marginLeft="50dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$999,99.00"
                android:textColor="#656565"
                android:textSize="16dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="30dp"
                android:layout_marginRight="50dp"
                android:layout_alignParentRight="true" />

            <TextView
                android:id="@+id/zCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12s6sd7fs5"
                android:textColor="#656565"
                android:textSize="16dp"
                android:layout_below="@id/sub"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:layout_marginRight="50dp"
                android:layout_alignParentRight="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$999,99.00"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="16dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/zCode"
                android:layout_marginTop="20dp"
                android:layout_marginRight="50dp"
                android:layout_alignParentRight="true" />

            <Button
                android:layout_width="1269dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#FFB74D"
                android:text="B U Y   N O W"
                android:textSize="20sp" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>